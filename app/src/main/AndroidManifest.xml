<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.smallacademy.userroles">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">

        <!-- Add PaymentHistoryActivity -->
        <activity
            android:name=".PaymentHistoryActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign" />

        <activity
            android:name=".DetailProductVIew"
            android:label="Detail Product View"
            android:theme="@style/Base.Theme.HompageDesign"/>
        <!-- Splash Screens -->
        <activity
            android:name=".SplashAdminActivity"
            android:exported="false"
            android:theme="@style/AppTheme.SplashAdmin" />
        <activity
            android:name=".SplashUserActivity"
            android:exported="false"
            android:theme="@style/AppTheme.SplashUser" /> <!-- User Roles Activities -->
        <activity
            android:name=".Login"
            android:exported="true"
            android:theme="@style/AppTheme.AdminPanel">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Admin Panel Activities -->
        <activity
            android:name=".AdminProfile"
            android:launchMode="singleTop"
            android:exported="false"
            android:theme="@style/AppTheme.AdminPanel" />
        <activity
            android:name=".AdminPanel"
            android:launchMode="singleTop"
            android:exported="false"
            android:theme="@style/AppTheme.AdminPanel" />
        <activity
            android:name=".AdminAddActivity"
            android:exported="false"
            android:theme="@style/AppTheme.AdminPanel" />
        <activity
            android:name=".DetailActivity"
            android:exported="false"
            android:theme="@style/AppTheme.AdminPanel" />
        <activity
            android:name=".Register"
            android:exported="false"
            android:theme="@style/AppTheme.AdminPanel" /> <!-- Other Activities -->
        <activity
            android:name=".ScanItem"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign" />
        <activity
            android:name=".CartView"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign" />
        <activity
            android:name=".PaymentActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign" />
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:exported="false"
            android:theme="@style/AppTheme.MainActivity" />
        <activity
            android:name=".HomeFragment"
            android:launchMode="singleTop"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".CategoryActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.HompageDesign" />
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
        <activity
            android:name=".CaptureActAdmin"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />
    </application>

</manifest>