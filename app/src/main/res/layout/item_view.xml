<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:elevation="12dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/recCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/gradeint_itemveiw">


        <ImageView
            android:id="@+id/prd_img"
            android:layout_width="103dp"
            android:layout_height="106dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:id="@+id/prd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/prd_img"
            android:text="Product Name"
            android:textColor="@color/darkNavy"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prd_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_name"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/prd_img"
            android:text="573485634"
            android:textColor="@color/darkNavy"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/prd_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_barcode"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/prd_img"
            android:textColor="@color/darkGrey"
            android:text="Category"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/prd_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prd_cat"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/prd_img"
            android:text="RM 22.10"
            android:textColor="@color/darkGrey"
            android:textSize="18sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/prd_desc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/prd_price"
            android:text="Description"
            android:textSize="15sp"
            android:textStyle="italic"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>